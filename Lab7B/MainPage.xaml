<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Lab7B"
             x:Class="Lab7B.MainPage">

    <StackLayout>
        <Label Text="Steve Facts"  FontAttributes="Bold"  FontSize="Large" />
        <ListView ItemsSource="{x:Static local:PersonFactData.All}"
              RowHeight="70" ItemSelected="OnSelection" >

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5, 5, 0, 5"
                                 Orientation="Horizontal"
                                 Spacing="15">

                            <Label Text="{Binding ShortFact}"
                                   FontAttributes="Bold"
                                   FontSize="Medium" />
                            <Image Source="{Binding ImageFile}" 
                                   HeightRequest="50" WidthRequest="50" />

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
